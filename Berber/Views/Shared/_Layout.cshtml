<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Berber</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Berber.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark-normal border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span class="text-gray">Berber Yakup</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-gray" asp-area="" asp-controller="Home" asp-action="Index">Randevu al</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-gray" asp-area="" asp-controller="YapayZeka" asp-action="Index">Yapay Zeka</a>
                        </li>
                        @if(User.Identity.IsAuthenticated){
                            <li class="nav-item">
                                <a class="nav-link text-gray" asp-area="" asp-controller="Home" asp-action="AppointmentHistory">Randevu Geçmişi</a>
                            </li>
                            @if(User.IsInRole("Worker")){
                                <li class="nav-item">
                                    <a class="nav-link text-gray" asp-area="" asp-controller="Workers" asp-action="Index">Randevular (Çalışan)</a>
                                </li>
                            }
                            @if(User.IsInRole("Admin")){
                                <li class="nav-item">
                                    <a class="nav-link text-gray" asp-area="Admin" asp-controller="Users" asp-action="Index">Panel</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-gray" asp-area="" asp-controller="SignOut" asp-action="Index">Çıkış</a>
                            </li>
                        }else{

                            <li class="nav-item">
                                <a class="nav-link text-gray" asp-area="" asp-controller="SignIn" asp-action="Index">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-gray" asp-area="" asp-controller="SignUp" asp-action="Index">Kaydol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background:#494646;">
        <div class="container">
            &copy; @DateTime.Now.Year, Tüm hakları saklıdır - Berber Yakup
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
